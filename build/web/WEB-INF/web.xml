<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>addItem</servlet-name>
        <servlet-class>amoujiShop.addItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addMsg</servlet-name>
        <servlet-class>amoujiShop.addMsg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showRecord</servlet-name>
        <servlet-class>amoujiShop.showRecord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addAppliance</servlet-name>
        <jsp-file>/addAppliance.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addFeedBack</servlet-name>
        <jsp-file>/addFeedBack.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>addItem</servlet-name>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addMsg</servlet-name>
        <url-pattern>/addMsg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showRecord</servlet-name>
        <url-pattern>/showRecord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addAppliance</servlet-name>
        <url-pattern>/addAppliance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addFeedBack</servlet-name>
        <url-pattern>/addFeedBack</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
